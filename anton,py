import asyncio
from hikkatl.tl.types import InputPeerSelf

async def anton_handler(event):
  if not event.text.startswith(".anton"):
    return
  text_to_write = "Антон лох юзербот Hikka"
  current_text = ""
  message = await event.get_reply_message() or event
  try:
    for char in text_to_write:
      current_text += char
      await message.edit(current_text)
      await asyncio.sleep(0.1)
  except Exception as e:
    await event.reply(f"Произошла ошибка: {e}")


async def load(client):
  client.add_event_handler(anton_handler)
  print("Модуль anton загружен.")

async def unload(client):
    client.remove_event_handler(anton_handler)
